<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="stockwatch.Pages.FindPotentialSymbolPage"
             Title="Potential symbols">
    <ScrollView>
        <VerticalStackLayout
            Padding="10,0"
            Spacing="25">
            <HorizontalStackLayout>
                <Label 
                    VerticalTextAlignment="Center"
                    Margin="0,0,20,0"
                    Text="Market"/>
                <Picker
                    x:Name="pckMarket"
                    Title="Select a market"
                    SelectedItem="HOSE">
                    <Picker.Items>
                        <x:String>HOSE</x:String>
                        <x:String>HNX</x:String>
                        <x:String>UPCOM</x:String>
                        <x:String>DER</x:String>
                        <x:String>BOND</x:String>
                    </Picker.Items>
                </Picker>
            </HorizontalStackLayout>

            <Button
                x:Name="btnAnalyze"
                Text="Analyze" 
                Clicked="OnAnalyzeButtonClicked"
                HorizontalOptions="Fill" />

            <Label
                x:Name="lblResult" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>