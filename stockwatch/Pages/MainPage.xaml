<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:stockwatch.Pages"
             x:Class="stockwatch.Pages.MainPage"
             x:Name="mainPage"
             Title="My symbol">

    <ScrollView>
        <VerticalStackLayout
            Padding="10,0"
            Spacing="25">
            <Grid RowDefinitions="Auto,Auto,Auto,*" ColumnDefinitions="Auto,Auto,*">
                <Label 
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalTextAlignment="Center"
                    Text="Symbol: "/>
                <Entry
                    x:Name="entSymbol"
                    Grid.Row="0"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Placeholder="Input symbol"
                    TextTransform="Uppercase"
                    TextChanged="OnInputsTextChanged"/>

                <Label 
                    Grid.Row="1"
                    Grid.Column="0"
                    VerticalTextAlignment="Center"
                    Text="Reference price: "/>
                <Entry
                    x:Name="entReferencePrice"
                    Grid.Row="1"
                    Grid.Column="1"
                    Placeholder="Input reference price"
                    Keyboard="Numeric"
                    Text="0"
                    TextChanged="OnInputsTextChanged"/>
                <Label 
                    Grid.Row="1"
                    Grid.Column="2"
                    VerticalTextAlignment="Center"
                    Text="đ"/>

                <Label 
                    Grid.Row="2"
                    Grid.Column="0"
                    VerticalTextAlignment="Center"
                    Text="Expected percentage: "/>
                <Entry
                    x:Name="entCeilingPrice"
                    Grid.Row="2"
                    Grid.Column="1"
                    Keyboard="Numeric"
                    Text="5"
                    TextChanged="OnInputsTextChanged"/>
                <Label 
                    Grid.Row="2"
                    Grid.Column="2"
                    VerticalTextAlignment="Center"
                    Text="% (higher)"/>

                <Label 
                    Grid.Row="3"
                    Grid.Column="0"
                    VerticalTextAlignment="Center"
                    Text="Unexpected percentage: "/>
                <Entry
                    x:Name="entFloorPrice"
                    Grid.Row="3"
                    Grid.Column="1"
                    Keyboard="Numeric"
                    Text="5"
                    TextChanged="OnInputsTextChanged"/>
                <Label 
                    Grid.Row="3"
                    Grid.Column="2"
                    VerticalTextAlignment="Center"
                    Text="% (lower)"/>
            </Grid>

            <Button
                    x:Name="btnWatch"
                    Text="Watch" 
                    SemanticProperties.Hint="Start watching"
                    Clicked="OnWatchButtonClicked"
                    HorizontalOptions="Fill" />

            <HorizontalStackLayout>
                <Label 
                    Text="Symbol: "/>
                <Label
                    x:Name="lblSymbol"
                    Text="{Binding LatestPrice.SymbolId, Source={x:Reference mainPage}}"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Label 
                    Text="Price: "/>
                <Label
                    x:Name="lblPrice"
                    Text="{Binding LatestPrice.Price, Source={x:Reference mainPage}}"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Label 
                    Text="Latest data at: "/>
                <Label
                    x:Name="lblLatestDataAt"
                    Text="{Binding LatestPrice.AtTime, Source={x:Reference mainPage}}"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
