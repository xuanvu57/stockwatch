<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="stockwatch.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:strings="clr-namespace:stockwatch.Resources.Strings"
    xmlns:local="clr-namespace:stockwatch.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="stockwatch">

    <TabBar>
        <ShellContent
            Title="{Binding Source={x:Static strings:AppResources.LBL_MySymbol}}"
            Icon="my_stock.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="{Binding Source={x:Static strings:AppResources.LBL_PotentialSymbols}}"
            Icon="find_stock.png"
            ContentTemplate="{DataTemplate local:FindPotentialSymbolPage}"
            Route="FindPotentialSymbol" />
        <ShellContent
            Title="{Binding Source={x:Static strings:AppResources.LBL_DataCollection}}"
            Icon="data_collection.png"
            ContentTemplate="{DataTemplate local:DataCollectionPage}"
            Route="DataCollection" />
    </TabBar>
</Shell>
