<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="stockwatch.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:stockwatch"
    Shell.FlyoutBehavior="Disabled"
    Title="stockwatch">

    <TabBar>
        <ShellContent
            Title="My symbol"
            Icon="my_stock.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Potential symbols"
            Icon="find_stock.png"
            ContentTemplate="{DataTemplate local:FindPotentialSymbol}"
            Route="FindPotentialSymbol" />
    </TabBar>
</Shell>
