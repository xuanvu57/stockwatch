<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:stockwatch.Resources.Strings"
             xmlns:commonViews="clr-namespace:stockwatch.CommonViews"
             xmlns:local="clr-namespace:stockwatch.ChildViews.DataCollection"
             x:Class="stockwatch.ChildViews.DataCollection.DataCollectionSettingView"
             x:Name="dataCollectionSettingView">
    <VerticalStackLayout
        Padding="10,0"
        Spacing="2">
        <commonViews:LabelDataPickerView
            x:Name="dpkFromDate"
            Label="{Binding Source={x:Static strings:AppResources.LBL_FromDate}}">
        </commonViews:LabelDataPickerView>

        <commonViews:LabelDataPickerView
            x:Name="dpkToDate"
            Label="{Binding Source={x:Static strings:AppResources.LBL_ToDate}}">
        </commonViews:LabelDataPickerView>
        
        <commonViews:LabelPickerView
            x:Name="pckMarket"
            ItemsSource="{Binding Source={x:Static local:DataCollectionSettingView.Markets}}"
            SelectedIndex="1"
            Label="{Binding Source={x:Static strings:AppResources.LBL_MarketOrSymbols}}">
        </commonViews:LabelPickerView>
    </VerticalStackLayout>
</ContentView>
