<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:stockwatch.CommonViews"
             x:Class="stockwatch.CommonViews.LabelEntryView"
             x:Name="labelEntryView"
             Loaded="labelEntryView_Loaded">
    <ContentView.Resources>
        <Style x:Key="InvalidEntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="Red" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="Grey" />
        </Style>
        <toolkit:NumericValidationBehavior x:Name="numericValidationBehavior" x:Key="numericValidationBehavior"
            Flags="ValidateOnValueChanged"
            InvalidStyle="{StaticResource InvalidEntryStyle}"
            MinimumValue="{Binding MinNumberValue, Source={x:Reference labelEntryView}}"
            MaximumValue="{Binding MaxNumberValue, Source={x:Reference labelEntryView}}"/>
    </ContentView.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding TextWidth, Source={x:Reference labelEntryView}}"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <AbsoluteLayout Grid.Column="0">
            <Entry
                x:Name="entEntry"
                Text="{Binding Text, Source={x:Reference labelEntryView}}"
                Placeholder="{Binding EntryPlaceholder, Source={x:Reference labelEntryView}}"
                Keyboard="{Binding Keyboard, Source={x:Reference labelEntryView}}"
                TextTransform="{Binding EntryTextTransform, Source={x:Reference labelEntryView}}"
                IsEnabled="{Binding IsEnabled, Source={x:Reference labelEntryView}}"
                Focused="Entry_Focused"
                Unfocused="Entry_Unfocused"
                AbsoluteLayout.LayoutBounds="0,20,1,45"
                AbsoluteLayout.LayoutFlags="WidthProportional">
            </Entry>

            <Label
                VerticalTextAlignment="Center"
                FontSize="13"
                Text="{Binding Label, Source={x:Reference labelEntryView}}"
                AbsoluteLayout.LayoutBounds="10,5,AutoSize,30">
            </Label>
        </AbsoluteLayout>
        
        <Label
            Grid.Column="1"
            VerticalTextAlignment="Center"
            Margin="0,10,0,0"
            TextTransform="Lowercase"
            Text="{Binding Unit, Source={x:Reference labelEntryView}}"/>
    </Grid>
</ContentView>
